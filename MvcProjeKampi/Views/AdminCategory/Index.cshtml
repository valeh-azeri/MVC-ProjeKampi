@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a class="btn btn-danger" href="/AdminCategory/DeleteCategory/@item.CategoryId" >Sil</a></td>
            <td><a class="btn btn-primary" href="#" >Güncəllə</a></td>
            <td><a class="btn btn-warning" href="#" >Başlıklar</a></td>
        </tr>
    }

</table>
<a href="/AdminCategory/AddCategory/" class="btn btn-info">Yeni Kategori</a>

